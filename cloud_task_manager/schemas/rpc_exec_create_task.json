{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "task_id": {
        "type": "string"
      },
      "host": {
        "type": "string"
      },
      "port": {
        "type": "integer"
      },
      "username": {
        "type": "string"
      },
      "password": {
        "type": "string"
      },
      "files_paths": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "selection_criteria": {
        "type": "string"
      },
      "server_arguments": {
        "type": "string",
        "additionalProperties": true
      },
      "client_arguments": {
        "type": "string",
        "additionalProperties": true
      },
      "tags": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    },
    "required": ["task_id", "host", "port", "username", "password", "files_paths"],
    "additionalProperties": false
  }
  